# Backend: use localhost (true) or live (false). Default is localhost if unset.
NEXT_PUBLIC_USE_LOCALHOST=true
# Must be a Google OAuth "Web application" client ID and match backend GOOGLE_CLIENT_ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_web_client_id

# Optional: override backend URL (ignores USE_LOCALHOST when set)
# NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8787
