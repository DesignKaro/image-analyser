{
  "manifest_version": 3,
  "name": "Image to Prompt",
  "version": "2.0.0",
  "description": "Click images on any page to generate AI prompts using your backend.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://img.connectiqworld.cloud/*","https://imagetopromptgenerator.one/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Image to Prompt",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
